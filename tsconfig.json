{
	"compilerOptions": {
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "./dist",
		"rootDir": "./",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"index.ts",
		"index.d.ts",
		"npm/prebuilds/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"**test**",
		"benches",
		"src",
		"docs",
		"DevDocuments",
		"__test__/",
		"npm/prebuilds/",
		
	]
}
